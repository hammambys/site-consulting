<section id="innerBanner"></section>
<main id="main">
    <div class="container admin-dashboard">
        {{>sidebar}}
        <div class="container">
            {{#if alert}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{alert}}
                <a href="/clients" class="btn">Retour</a>
            </div>
            {{/if}}
            {{#each rows}}
            <form class="row g-3 needs-validation" method="POST" action="/editclient/{{this.user_id}}" novalidate>
                {{>edit-client-form}}
            </form>
            {{/each}}
        </div>
</main>