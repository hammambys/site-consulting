<section id="innerBanner"></section>
<main id="main">
  <div class="container-sm dashboard">
    {{>admin-sidebar}}
    <div class="container">
      {{#if alert}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{alert}}
      </div>
      {{/if}}
      <div class="table-responsive">
        <table class="table table-bordered ">
          <thead class="thead-dark">
            <tr>
              <th>#</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Username</th>
              <th>Email</th>
              <th>Status</th>
              <th>Gérer client</th>
            </tr>
          </thead>
          <tbody>
            {{#each rows}}
            <tr>
              <th scope="row">{{this.user_id}}</th>
              <td>{{this.first_name}}</td>
              <td>{{this.last_name}}</td>
              <td>{{this.username}}</td>
              <td>{{this.email}}</td>
              {{#if this.isActive}}
              <td>Active</td>
              {{else}}
              <td>Inactive</td>
              {{/if}}
              <form action="/admin/clients/{{this.user_id}}" method="post">
                <td class="text-end">
                  <a href="/admin/viewclient/{{this.user_id}}" type="button" class="btn btn-primary"><i
                      class="bi bi-eye"></i> Voir</a>
                  <a href="/admin/editclient/{{this.user_id}}" type="button" class="btn btn-light btn-small"><i
                      class="bi bi-pencil"></i>
                    Editer</a>
                  {{#if this.isActive}}
                  <input class="btn btn-secondary" type="submit" value="Désactiver"></input>
                  {{else}}
                  <input class="btn btn-secondary" type="submit" value="Activer"></input>
                  {{/if}}
                </td>
              </form>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

    </div>

  </div>

</main>