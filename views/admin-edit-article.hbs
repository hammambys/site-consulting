<section id="innerBanner"></section>
<main id="main">
    <div class="container-sm dashboard">
        {{>admin-sidebar}}
        <div class="container">
            {{#if alert}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{alert}}
                <a href="/admin/articles" class="btn">Retour</a>
            </div>
            {{/if}}
            {{#each rows}}
            <form class="row g-3 needs-validation" method="POST" action="/admin/editarticle/{{this.article_id}}"
                novalidate>
                {{>article-form}}
            </form>
            {{/each}}
        </div>
</main>