<section id="innerBanner"></section>
<main id="main">
    <div class="container">
        <div class="article-title pb-5">
            <h1>{{article_title}}</h1>
        </div>
        <div class="article-cover pb-5">
            <img class="img-fluid rounded mx-auto d-block" src="../{{this.img_src}}" alt="article alt">
        </div>
        <div class="article-content pb-5">
            <article class="container-sm">
                <p style="word-wrap:break-word;"> {{article_content}}
                </p>
            </article>
        </div>
    </div>
</main>