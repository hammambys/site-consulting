</section>

<main id="main">
  <div class="container d-flex flex-wrap">
    {{#each rows}}
    <div class="p-4">
      <div class="card text-white" style="width: 18rem; background-color:var(--third)">
        <img class="card-img-top img-thumbnail" style="height: 200px;" src="{{img_src}}" alt="Card image cap">
        <!--onerror="this.src='http:///i.imgur.com/hfM1J8s.png'"-->
        <div class="card-body">
          <h5 class="card-title">{{article_title}}</h5>
          <a href="/articles/{{article_id}}" class="btn btn-primary">Lire</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

</main>