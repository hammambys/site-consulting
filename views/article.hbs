<section id="innerBanner"></section>
<main id="main">
    <div class="container">
        <div class="article-cover">
            <img class="img-fluid" src="../public/{{img_src}}" alt="article alt">
        </div>
        <div class="article-title ">
            <h1>{{article_title}}</h1>
        </div>
        <div class="article-content ">
            <article class="container-sm">
                <p style="word-wrap:break-word;"> {{article_content}}
                </p>
            </article>
        </div>
    </div>
</main>