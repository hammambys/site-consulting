<div class="form">
	<h1>Login</h1>
	<form action="/auth" method="post">
		<div class="field">
			<label for="email">
				Email
			</label>
			<input type="text" name="email" placeholder="Email" id="email" required>
		</div>
		<div class="field">
			<label for="password">
				Mot de passe
			</label>
			<input type="password" name="password" placeholder="Password" id="password" required>
		</div>
		<input type="submit" value="Login">
	</form>
</div>